@import switch
/* topdoc
  name: switch
  description: Default skin for Topcoat switch
  modifiers:
    :focus: Focus state
    :disabled: Disabled state
  markup:
    <label class="topcoat-switch">
      <input type="checkbox" class="topcoat-switch__input">
      <div class="topcoat-switch__toggle"></div>
    </label>
    <br>
    <br>
    <label class="topcoat-switch">
      <input type="checkbox" class="topcoat-switch__input" disabled>
      <div class="topcoat-switch__toggle"></div>
    </label>
  examples:
    mobile switch: http://codepen.io/Topcoat/pen/upxds
  tags:
    - desktop
    - light
    - mobile
    - switch
*/
.topcoat-switch
  @extend .switch
  padding var-padding
  border-radius var-border-radius
  border var-border
  overflow hidden
  width 6rem

.topcoat-switch__input
  @extend .switch__input

.topcoat-switch__toggle:before,
.topcoat-switch__toggle:after
  top -1
  width 5rem

.topcoat-switch__toggle:before
  @extend .switch__toggle:before
  content 'ON'
  color #0083e8
  background-color #e0f0fa
  right 1rem
  padding-left 1.5rem

.topcoat-switch__toggle
  @extend .switch__toggle
  line-height var-line-height
  height var-line-height
  width 2rem
  border-radius var-border-radius
  color var-color
  text-shadow var-text-shadow
  background-color var-background-color
  border var-border
  margin-left -1.3rem
  margin-bottom -1px
  margin-top -1px
  box-shadow var-box-shadow
  transition margin-left 0.05s ease-in-out

.topcoat-switch__toggle:after
  @extend .switch__toggle:after
  content 'OFF'
  background-color #d3d7d7
  left 1rem
  padding-left 2rem

.topcoat-switch__input:checked + .topcoat-switch__toggle
  margin-left 2.7rem

.topcoat-switch__input:focus + .topcoat-switch__toggle
  border var-border--focus
  box-shadow var-box-shadow--focus

.topcoat-switch__input:disabled + .topcoat-switch__toggle
  @extend .switch--disabled

